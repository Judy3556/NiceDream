<UserControl x:Class="NiceDream.TodoItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NiceDream"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Width="325" Height="60">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="TimeBox" Background="Transparent" BorderBrush="Transparent" FontSize="20" Foreground="White"></TextBox>
        <TextBox x:Name="NameBox" Background="Transparent" BorderBrush="Transparent" FontSize="20" Foreground="White"></TextBox>
    </Grid>
</UserControl>
